{
  "name": "server",
  "version": "1.0.0",
  "description": "A boilerplate node.js server using typescript",
  "scripts": {
    "watch": "webpack",
    "pack": "NODE_ENV=production webpack",
    "packWindows": "set NODE_ENV=production && webpack",
    "start": "set NODE_ENV=DEV && nodemon --delay 3000ms ./dist/server.js",
    "clean": "rimraf dist",
    "startServer": "set NODE_ENV=production && node ./dist/server.js"
  },
  "author": "Jeff Hull",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1"
  },
  "devDependencies": {
    "@types/node": "^10.12.18",
    "jsonwebtoken": "^8.4.0",
    "prettier": "^1.15.3",
    "source-map-support": "^0.5.9",
    "ts-loader": "^5.3.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
